@{
    ViewData["Title"] = "Piloto";
}

<div class="container text-center">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Piloto</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-controller="Driver" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo Piloto
                </a>
            </div>
        </div>
    </div>
    
    <div>
        <table id="driversTable" class="table table-bordered table-striped"></table>
    </div>
</div>

<script src="~/js/Driver/Driver.js"></script>